# Flask Configuration
SECRET_KEY=your-secret-key-here-generate-with-python-secrets
FLASK_ENV=development
# For production, set FLASK_ENV=production

# Encryption Key (for API keys storage)
ENCRYPTION_KEY=your-encryption-key-here-generate-with-security-module

# Database
# Development (SQLite)
DATABASE_URL=sqlite:///alpaca_trader.db
# Production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/database

# Alpaca API (Legacy - for backward compatibility with old dashboard)
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key

# Gunicorn (Production)
GUNICORN_WORKERS=4
GUNICORN_BIND=0.0.0.0:5000

# Logging
LOG_LEVEL=INFO

# How to generate keys:
# SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
# ENCRYPTION_KEY: python -m alpaca_trader.security
